# Database
DATABASE_URL="file:./dev.db"

# JWT Secret (Generate a secure random string)
JWT_SECRET="your-super-secret-jwt-key-here-change-in-production"

# Admin Token (Change in production)
ADMIN_TOKEN="your-admin-secret-token-here"

# Application URL
NEXT_PUBLIC_BASE_URL="http://localhost:3000"

# Faraz SMS Configuration (Updated to use @aspianet/faraz-sms)
FARAZ_USERNAME="your-faraz-username"
FARAZ_PASSWORD="your-faraz-password"
FARAZ_SENDER_NUMBER="5000..."     # Your sender number from FarazSMS
FARAZ_OTP_TEMPLATE="your-otp-template-code"  # Your template code from FarazSMS panel

# ZarinPal Payment Gateway Configuration
ZARINPAL_MERCHANT_ID="your-zarinpal-merchant-id"

# Environment (development or production)
NODE_ENV="development"

# Prisma Configuration (Optional - set to ignore network issues)
PRISMA_DISABLE_WARNINGS="false"
PRISMA_HIDE_QUERY= "false"
PRISMA_HIDE_UPDATES= "false"
