{
  "name": "online-lottery-system",
  "version": "1.0.0",
  "description": "Professional online lottery system with OTP authentication and ZarinPal payment integration",
  "private": true,
  "prisma": {
    "schema": "prisma/schema.prisma"
  },
  "engines": {
    "node": ">=20 <24"
  },
  "scripts": {
    "dev": "next dev",
    "build": "npx prisma generate --schema prisma/schema.prisma && next build",
    "postinstall": "node -e \"const fs=require('fs'); const {spawnSync}=require('child_process'); if(!fs.existsSync('prisma/schema.prisma')){console.log('Skipping prisma generate (schema not present yet)'); process.exit(0);} const cmd=process.env.BUN?'bunx':'npx'; const r=spawnSync(cmd,['prisma','generate','--schema','prisma/schema.prisma'],{stdio:'inherit',shell:true}); process.exit(r.status??1);\"",
    "ensure-db": "node scripts/ensure-db.js",
    "start": "node server.js",
    "lint": "next lint",
    "db:push": "prisma db push",
    "db:studio": "prisma studio",
    "db:generate": "prisma generate"
  },
  "dependencies": {
    "@aspianet/faraz-sms": "^1.0.1",
    "@prisma/client": "7.2.0",
    "@radix-ui/react-alert-dialog": "^1.1.1",
    "@radix-ui/react-avatar": "^1.1.0",
    "@radix-ui/react-checkbox": "^1.1.1",
    "@radix-ui/react-dialog": "^1.1.1",
    "@radix-ui/react-dropdown-menu": "^2.1.1",
    "@radix-ui/react-label": "^2.1.0",
    "@radix-ui/react-popover": "^1.1.1",
    "@radix-ui/react-scroll-area": "^1.1.0",
    "@radix-ui/react-select": "^2.1.1",
    "@radix-ui/react-separator": "^1.1.0",
    "@radix-ui/react-slot": "^1.1.0",
    "@radix-ui/react-tabs": "^1.1.0",
    "@radix-ui/react-toast": "^1.2.1",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "jose": "^6.1.3",
    "lucide-react": "^0.562.0",
    "mysql2": "^3.11.5",
    "next": "15.0.0",
    "next-themes": "^0.4.6",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tailwind-merge": "^3.4.0",
    "tailwindcss-animate": "^1.0.7",
    "zarinpal-checkout": "*"
  },
  "devDependencies": {
    "@types/node": "^25.0.3",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.39.2",
    "eslint-config-next": "16.1.1",
    "postcss": "^8.4.39",
    "prisma": "7.2.0",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.5.2"
  },
  "overrides": {
    "@prisma/engines": "5.18.0"
  }
}
